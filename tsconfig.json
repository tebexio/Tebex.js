{
    "include": ["src/**/*", "tests/**/*"],
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "module": "esnext",
        "target": "es2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitOverride": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "jsxFactory": "h",
    }
}